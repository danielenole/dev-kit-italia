{
  "name": "@italia/rating",
  "description": "Web component it-rating del Design system .italia",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/italia/dev-kit-italia.git",
    "directory": "packages/rating"
  },
  "author": "Presidenza del Consiglio dei Ministri",
  "homepage": "https://italia.github.io/dev-kit-italia",
  "bugs": {
    "url": "https://github.com/italia/dev-kit-italia/issues"
  },
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": "./dist/src/index.js",
    "./it-rating.js": "./dist/src/it-rating.js",
    "./it-rating-item.js": "./dist/src/it-rating-item.js",
    "./styles/*": "./styles/*"
  },
  "files": [
    "dist/src",
    "README.md",
    "AUTHORS",
    "LICENSE",
    "custom-elements.json"
  ],
  "scripts": {
    "analyze": "cem analyze --litelement --exclude dist",
    "build": "rollup --config rollup.config.js",
    "clean": "rimraf node_modules .turbo .rollup.cache dist coverage",
    "prepublish": "build",
    "lint": "eslint --ext .ts \"src/**/*.ts\" \"stories/**/*.ts\" \"test/**/*.ts\" && stylelint \"styles/**/*.scss\" \"src/**/*.scss\" && prettier \"src/**/*.ts\" \"stories/**/*.ts\" \"test/**/*.ts\" --check",
    "format": "eslint --fix --ext .ts \"src/**/*.ts\" \"stories/**/*.ts\" \"test/**/*.ts\" && stylelint --fix \"styles/**/*.scss\" \"src/**/*.scss\" && prettier --write \"src/**/*.ts\" \"stories/**/*.ts\" \"test/**/*.ts\"",
    "test": "wtr --coverage --node-resolve --config web-test-runner.config.js",
    "test:watch": "wtr --coverage --node-resolve --config web-test-runner.config.js --watch"
  },
  "dependencies": {
    "@italia/globals": "workspace:^",
    "@italia/i18n": "workspace:^",
    "@italia/icon": "workspace:^",
    "@italia/radio": "workspace:^",
    "bootstrap-italia": "catalog:",
    "lit": "catalog:"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@italia/test-config": "workspace:^",
    "@italia/input": "workspace:^",
    "@italia/typescript-config": "workspace:^",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@web/test-runner": "^0.19.0",
    "rollup": "^4.42.0",
    "rollup-plugin-scss-lit": "^2.1.0",
    "sass": "catalog:",
    "tslib": "^2.6.3",
    "typescript": "catalog:"
  },
  "customElements": "custom-elements.json"
}
