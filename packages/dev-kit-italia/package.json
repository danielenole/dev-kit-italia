{
  "name": "@italia/dev-kit-italia",
  "description": "Bundle dei web components del Design system .italia",
  "version": "1.0.0-alpha.5",
  "publishConfig": {
    "access": "public"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/italia/dev-kit-italia.git",
    "directory": "packages/dev-kit-italia"
  },
  "author": "Presidenza del Consiglio dei Ministri",
  "homepage": "https://italia.github.io/dev-kit-italia",
  "bugs": {
    "url": "https://github.com/italia/dev-kit-italia/issues"
  },
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./elements.js": "./dist/elements.js",
    "./styles.css": "./dist/styles.css",
    "./fonts.css": "./dist/fonts.css"
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "clean": "rimraf node_modules .turbo .rollup.cache dist",
    "prepublish": "pnpm build",
    "lint": "eslint --ext .ts \"src/**/*.ts\" \"stories/**/*.ts\" && stylelint \"styles/**/*.scss\" && prettier \"src/**/*.ts\" \"stories/**/*.ts\" --check",
    "format": "eslint --fix --ext .ts \"src/**/*.ts\" \"stories/**/*.ts\" && stylelint --fix \"styles/**/*.scss\" && prettier --write \"src/**/*.ts\" \"stories/**/*.ts\""
  },
  "files": [
    "dist",
    "!dist/tsconfig.tsbuildinfo",
    "README.md",
    "AUTHORS",
    "LICENSE",
    "custom-elements.json"
  ],
  "keywords": [
    "web components",
    "web-components",
    "design-system",
    "italia",
    "components",
    "ui",
    "lit-element",
    "lit-html"
  ],
  "dependencies": {
    "@italia/avatar": "workspace:^",
    "@italia/callout": "workspace:^",
    "@italia/accordion": "workspace:^",
    "@italia/breadcrumbs": "workspace:^",
    "@italia/back-to-top": "workspace:^",
    "@italia/button": "workspace:^",
    "@italia/checkbox": "workspace:^",
    "@italia/chip": "workspace:^",
    "@italia/collapse": "workspace:^",
    "@italia/dropdown": "workspace:^",
    "@italia/i18n": "workspace:^",
    "@italia/rating": "workspace:^",
    "@italia/icon": "workspace:^",
    "@italia/input": "workspace:^",
    "@italia/navscroll": "workspace:^",
    "@italia/modal": "workspace:^",
    "@italia/popover": "workspace:^",
    "@italia/section": "workspace:^",
    "@italia/select": "workspace:^",
    "@italia/skiplinks": "workspace:^",
    "@italia/sticky": "workspace:^",
    "@italia/video": "workspace:^",
    "@italia/radio": "workspace:^"
  },
  "devDependencies": {
    "@italia/typescript-config": "workspace:^",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "bootstrap-italia": "catalog:",
    "design-tokens-italia": "catalog:",
    "rimraf": "^6.0.1",
    "rollup": "^4.42.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-scss": "^4.0.1",
    "sass": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "lit": "catalog:"
  },
  "types": "./dist/src/index.d.ts",
  "customElements": "custom-elements.json",
  "sideEffects": [
    "./dist/elements.js"
  ]
}
